@model IEnumerable<MovieManagement.Models.Movie>

@{
    ViewData["Title"] = "Index";
}
<div class="d-flex justify-content-between">
    <div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a> </li>
            <li class="breadcrumb-item">Movie</li>
            <li class="breadcrumb-item active">@ViewBag.Title</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-md-12 d-md-flex justify-content-between">
        
        <div>
            <ul class="list-inline">
                <li class="list-inline-item">Sort by:</li>
                <li class="list-inline-item"><a asp-action="Index" asp-route-sortBy="@ViewData["NameSort"]">Name</a></li>
                <li class="list-inline-item"><a asp-action="Index" asp-route-sortBy="@ViewData["GenreSort"]">Genre</a></li>
                <li class="list-inline-item"><a asp-action="Index" asp-route-sortBy="@ViewData["LengthSort"]">Movie Length</a></li>
                <li class="list-inline-item"><a asp-action="Index" asp-route-sortBy="@ViewData["DateSort"]">Release Date</a></li>
            </ul>
        </div>

        <div>
            <form method="get" asp-action="Index" class="row g-1">
                <div class="col-auto">
                    <input type="text" class="form-control" name="search" value="@ViewData["Search"]" placeholder="Search by Name or Description" />
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-secondary">Search</button>
                </div>
            </form>
        </div>
    </div>
    @foreach (var movieViewModel in Model)
    {
        <div class="col-sm-12 col-md-6 col-lg-3 g-3">

            <div class="card shadow-sm overflow-hidden">

                <img src="data:image;base64,@System.Convert.ToBase64String(movieViewModel.Banner)" width="100%" height="200px" />

                <div class="card-body py-3">

                    <p class="fs-5 fw-bold p-0 m-0 mw-50">@movieViewModel.Name</p>

                    <small class="p-0 m-0">Genre: @movieViewModel.GenreName / Duration: @movieViewModel.LengthInMin Minute</small>

                    <p class="card-text mt-2" style="height:72px; overflow: hidden; text-overflow: ellipsis; text-overflow: ellipsis;">
                        @movieViewModel.Description
                    </p>

                    <div class="d-flex justify-content-between align-items-center">

                        <small class="text-muted">Release Date: @movieViewModel.ReleaseDate</small>

                        <div class="btn-group">

                            <a asp-action="Edit" asp-route-id="@movieViewModel.Id" class="btn btn-sm btn-outline-primary">
                                <i class="fa fa-pencil"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>