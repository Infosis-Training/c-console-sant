@model IEnumerable<MovieManagement.Models.Crew>

@{
    ViewData["Title"] = "List All";
}
<div class="d-flex justify-content-between mb-2">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a> </li>
        <li class="breadcrumb-item"><a asp-controller="Movie" asp-action="Index">Crew</a> </li>
        <li class="breadcrumb-item active">@ViewData["Title"]</li>
    </ol>
</div>

<div class="d-flex justify-content-end">
    <a asp-action="Create" class="btn btn-primary btn-sm my-3">Add New</a>
</div>

<div class="row">

    <div class="col-md-12 table-responsive">

        <table class="table table-bordered bg-white table-report border shadow-sm">
            <thead class="bg-light">
                <tr>
                    <th width="25px">
                        SN
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Role)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Dob)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{int sn  = 0;}
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@{sn++;} @sn</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Role)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Dob)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-primary"><i class="bi bi-pencil"></i> Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section scripts{
    <script>
        $(function() {
            $('.table-report').DataTable({
                "aLengthMenu": [[25, 50, 100, -1], [25, 50, 100, "All"]],
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "autoWidth": true
            });
        });
    </script>
}