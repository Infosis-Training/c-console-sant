@model MovieManagement.ViewModel.UserViewModel
@{
    ViewData["Title"] = "User Add";
}

<div class="d-flex justify-content-between">
    <div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a> </li>
            <li class="breadcrumb-item">Users</li>
            <li class="breadcrumb-item active">@ViewBag.Title</li>
        </ol>
    </div>
</div>
<div class="border bg-white shadow-sm p-4 col-md-8 col-sm-12">
    <form asp-action="Store" class="row g-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-6">
            <label asp-for="FirstName" class="control-label"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="LastName" class="control-label"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="col-md-12">
            <label asp-for="UserName" class="control-label"></label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="col-md-12">
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="PhoneNumber" class="control-label"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Role" class="control-label"></label>
            @Html.DropDownList("Role", new SelectList((System.Collections.IEnumerable) ViewData["tempEmpList"]),new { @class="form-control select-add-placeholder" })
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>
        <div class="col-md-12">
            <button type="submit" value="Create" class="btn btn-primary"><i class="fa fa-save"></i> Save</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
        </div>
    </form>
</div>
@section scripts{
    <script>
        $(function() {
            $(".select-add-placeholder").prepend("<option value='' disabled selected>--Select--</option>");
        });
    </script>
}