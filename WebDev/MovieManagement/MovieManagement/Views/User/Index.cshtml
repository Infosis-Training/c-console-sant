@{
    ViewData["Title"] = "User List";
}

<div class="d-flex justify-content-between">
    <div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a> </li>
            <li class="breadcrumb-item">Users</li>
            <li class="breadcrumb-item active">@ViewBag.Title</li>
        </ol>
    </div>
</div>

<div class="d-flex justify-content-end">
    <a asp-action="Add" class="btn btn-primary btn-sm my-3">Add New</a>
</div>

<div class="row">

    <div class="col-md-12 table-responsive">

        <table class="table table-bordered bg-white table-report border shadow-sm">
            <thead>
                <tr>
                    <th width="25px">SN</th>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>UserName</th>
                    <th>PhoneNumber</th>
                    <th>IsVerified</th>
                    <th>Role</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    int RowNo = 0;
                }
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@{
                                RowNo++;
                            } @RowNo</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.UserName</td>
                        <td>@user.PhoneNumber</td>
                        <td>@user.EmailConfirmed</td>
                        <td>@user.Role</td>
                        <td>
                            <a href="" class="text-primary"><i class="fas fa-edit"></i> Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section scripts{
    <script>
        $(function() {
            $('.table-report').DataTable({
                "aLengthMenu": [[25,50,100, -1], [25, 50, 100,"All"]],
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "autoWidth": true
            });
        });
    </script>
}